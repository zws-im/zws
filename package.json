{
	"name": "@zws.im/zws",
	"version": "0.0.0-development",
	"private": true,
	"bugs": {
		"url": "https://github.com/zws-im/zws/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zws-im/zws.git"
	},
	"license": "Apache-2.0",
	"author": {
		"name": "Jonah Snider",
		"email": "jonah@jonah.pw",
		"url": "https://jonahsnider.com"
	},
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"prebuild": "yarn workspaces foreach --parallel run prebuild",
		"build": "yarn workspaces foreach --parallel --topological run build",
		"clean": "yarn workspaces foreach --parallel run clean",
		"deploy": "lerna version --yes --conventional-commits --conventional-graduate --exact --create-release github && lerna publish from-git --yes",
		"lint": "xo",
		"migrations": "prisma migrate deploy",
		"start": "yarn run api:start",
		"style": "prettier --check ."
	},
	"prettier": "@jonahsnider/prettier-config",
	"dependencies": {
		"@prisma/client": "3.4.1",
		"prisma": "3.4.1"
	},
	"devDependencies": {
		"@jonahsnider/prettier-config": "1.1.0",
		"@jonahsnider/xo-config": "5.0.0",
		"lerna": "4.0.0",
		"prettier": "2.4.1",
		"xo": "0.46.4"
	},
	"engines": {
		"node": "16.x"
	},
	"packageManager": "yarn@3.1.0"
}
