	"author": {
		"name": "Jonah Snider",
		"email": "jonah@jonah.pw",
		"url": "https://jonahsnider.com"
	},
	"scripts": {
		"build": "node --require ./ss-polyfills/File.js ./node_modules/.bin/next build",
		"build:nixpack": "nixpacks build . --name zws-im/zws",
		"dev": "node --require ./ss-polyfills/File.js ./node_modules/.bin/next dev",
		"postinstall": "prisma generate",
		"lint": "biome check .",
		"lint:fix": "biome check . --apply-unsafe",
		"migrations": "prisma migrate deploy",
		"preopenapi:download": "bun run build",
		"openapi:download": "bun scripts/openapi-download.ts",
		"openapi:lint": "bunx @stoplight/spectral-cli lint openapi.json",
		"start": "node --require ./ss-polyfills/File.js ./node_modules/.bin/next start",
		"validate-prisma": "prisma validate"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "5.5.0",
		"@heroicons/react": "2.0.18",
		"@highlight-run/next": "4.3.0",
		"@jonahsnider/nextjs-api-utils": "1.0.4",
		"@jonahsnider/util": "10.1.0",
		"@prisma/client": "5.2.0",
		"@types/node": "20.6.0",
		"@types/react": "18.2.21",
		"@types/react-dom": "18.2.7",
		"@vercel/analytics": "1.0.2",
		"@vercel/kv": "0.2.2",
		"apexcharts": "3.42.0",
		"autoprefixer": "10.4.15",
		"clsx": "2.0.0",
		"convert": "4.13.1",
		"framer-motion": "10.16.4",
		"millify": "6.1.0",
		"next": "13.4.19",
		"next-plausible": "3.11.1",
		"postcss": "8.4.29",
		"react": "18.2.0",
		"react-apexcharts": "1.4.1",
		"react-dom": "18.2.0",
		"swagger-ui-react": "5.6.2",
		"swr": "2.2.2",
		"tailwindcss": "3.3.3",
		"typescript": "5.2.2",
		"zod": "3.22.2",
		"zod-to-json-schema": "3.21.4",
		"zod-validation-error": "1.5.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.1.2",
		"@tsconfig/bun": "1.0.0",
		"@tsconfig/strictest": "2.0.2",
		"@types/swagger-ui-react": "4.18.0",
		"bun-types": "1.0.1",
		"prisma": "5.2.0",
		"type-fest": "4.3.1",
		"vercel": "32.2.1"
	},
	"packageManager": "bun@1.0.0",
	"engines": {
		"node": "18.x || 20.x"
	}
}
