{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"assist": {
		"enabled": true
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		},
		"globals": ["React", "Bun"],
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"domains": {
			"next": "all",
			"react": "all",
			"test": "all"
		},
		"rules": {
			"complexity": {
				"noStaticOnlyClass": "off",
				"useLiteralKeys": "off"
			},
			"correctness": {
				"useUniqueElementIds": "off"
			},
			"style": {
				"noParameterProperties": "off",
				"useComponentExportOnlyModules": {
					"level": "error",
					"options": {
						"allowExportNames": ["metadata", "viewport", "runtime"]
					}
				}
			},
			"suspicious": {
				"noEmptyBlockStatements": "off"
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
